<div class="container">
  <% @chats.each do |chat|  %>   
    <div class="row">
  　　<% if chat.sender_id == current_user.id %>
  　　    <div class="col-5"></div>
        <div class="col-6">
          <div class="card my-2">
            <div class="card-body text-end">
              <%= chat.content %>
            </div>
          </div>
        </div>
  　　<% else %>
　　    <div class="col-6">
          <div class="card my-2">
            <div class="card-body">
              <%= chat.content %>
            </div>
          </div>
        </div>
　  　<% end %>
    </div>
  <% end %> 
  <%= form_tag ("/users/#{@receiver_id}/chats") do %> 
    <div class="form-group mr-3">
      <textarea name="content" rows="5" class="form-control" id="InputAsk"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">送信</button>
  
  <% end %>
</div>
